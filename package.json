{
  "name": "apollo-link-reactive-schema",
  "version": "2.1.1",
  "description": "Apollo Link that provides a reactive-graphql execution environment to perform operations on a provided reactive schema.",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getstation/apollo-link-reactive-schema.git"
  },
  "bugs": {
    "url": "https://github.com/getstation/apollo-link-reactive-schema/issues"
  },
  "scripts": {
    "build": "tsc -p .",
    "clean": "rimraf lib/* && rimraf coverage/*",
    "coverage": "jest --coverage",
    "filesize": "npm run build && npm run build:browser",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "jest",
    "watch": "tsc -w -p ."
  },
  "dependencies": {
    "apollo-link": "^1.2.6"
  },
  "peerDependencies": {
    "graphql": "^0.11.0 || ^0.12.0 || ^0.13.0 || ^14.0.0",
    "reactive-graphql": "^3.0.0",
    "rxjs": "^6.0.0"
  },
  "devDependencies": {
    "@types/graphql": "14.0.4",
    "@types/jest": "22.2.3",
    "browserify": "16.2.3",
    "graphql": "14.0.2",
    "graphql-tag": "2.10.0",
    "graphql-tools": "2.24.0",
    "jest": "22.4.4",
    "rimraf": "2.6.3",
    "ts-jest": "22.4.6",
    "tslint": "5.12.1",
    "typescript": "3.0.3",
    "uglify-js": "3.4.9",
    "reactive-graphql": "^3.0.0",
    "rxjs": "^6.0.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "testURL": "http://localhost"
  }
}
